# Database (REQUIRED)
# Replace with your actual database credentials
DATABASE_URL=postgresql://nftuser:YOUR_PASSWORD@localhost:5432/nft_marketplace?schema=public

# Redis (REQUIRED)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD= 

# JWT (REQUIRED)
# Generate with: openssl rand -base64 48
JWT_SECRET=GENERATE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=GENERATE_ANOTHER_RANDOM_SECRET_HERE
REFRESH_TOKEN_EXPIRES_IN=30d

# Blockchain RPC (OPTIONAL - leave empty for demo)
# Get free keys from alchemy.com or infura.io
MAINNET_RPC_URL=
SEPOLIA_RPC_URL=
POLYGON_RPC_URL=

# Contract Addresses (OPTIONAL - only needed after deploying smart contracts)
NFT_721_ADDRESS=
NFT_1155_ADDRESS=
MARKETPLACE_ADDRESS=
CHAIN_ID=1

# IPFS / Pinata (OPTIONAL - get free account at pinata.cloud)
PINATA_API_KEY=
PINATA_SECRET_KEY=
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Arweave (OPTIONAL - advanced feature)
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# Payment Processors (OPTIONAL - only if accepting payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
MOONPAY_API_KEY=

# Email
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@yourmarketplace.com

# API Configuration
PORT=4000
NODE_ENV=development
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# The Graph
SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/your-username/nft-marketplace

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Admin
ADMIN_WALLET_ADDRESS=0x...
