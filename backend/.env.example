# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nft_marketplace

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Blockchain RPC
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Contract Addresses
NFT_721_ADDRESS=0x...
NFT_1155_ADDRESS=0x...
MARKETPLACE_ADDRESS=0x...
CHAIN_ID=1

# IPFS / Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Arweave
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# Payment Processors
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
MOONPAY_API_KEY=your_moonpay_key

# Email
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@yourmarketplace.com

# API Configuration
PORT=4000
NODE_ENV=development
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# The Graph
SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/your-username/nft-marketplace

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Admin
ADMIN_WALLET_ADDRESS=0x...
